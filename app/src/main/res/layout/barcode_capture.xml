<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <com.example.myapplication0103.ui.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="fill_parent"
        android:layout_height="450dp">


      <com.example.myapplication0103.ui.camera.GraphicOverlay
          android:id="@+id/graphicOverlay"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:foregroundGravity="center_vertical|center" />

    </com.example.myapplication0103.ui.camera.CameraSourcePreview>

    <Button
        android:id="@+id/toDoPhoto_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сделать фото акта" />

    <TextView
        android:id="@+id/barcode_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Номер штрихкода"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/barcode_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
  </LinearLayout>

</LinearLayout>
